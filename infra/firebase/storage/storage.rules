rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Store private user uploads under: uploads/{uid}/{conversationId}/{fileName}
    match /uploads/{uid}/{conversationId}/{fileName} {
      allow read, write: if isOwner(uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
