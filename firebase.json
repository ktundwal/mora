{
  "firestore": {
    "rules": "infra/firebase/firestore/firestore.rules",
    "indexes": "infra/firebase/firestore/firestore.indexes.json"
  },
  "storage": {
    "rules": "infra/firebase/storage/storage.rules"
  },
  "functions": {
    "source": "apps/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "apps/web/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ]
  }
}
